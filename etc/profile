alias cbc='mkdir -p /host && mount -t 9p -o trans=virtio host /host && cd /lib/optee_armtz && ln -sf /host/optee_examples/aes-cbc-mac/ta/01020304-2d53-4841-3120-4a6f636b6542.ta 01020304-2d53-4841-3120-4a6f636b6542.ta && cd /usr/bin && ln -sf /host/optee_examples/aes-cbc-mac/host/optee_example_aes-cbc-mac optee_example_aes-cbc-mac'
